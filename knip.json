{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "project": [
    "src/**/*.{js,jsx,ts,tsx}"
  ],
  "ignore": [
    ".next/**",
    "node_modules/**",
    "public/**",
    "src/**/*.test.{ts,tsx}",
    "src/**/*.spec.{ts,tsx}",
    "src/test/**",
    "src/__tests__/**"
  ],
  "paths": {
    "@/*": ["./src/*"]
  }
}