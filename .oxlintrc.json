{
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "plugins": ["import", "jsx-a11y", "react"],
  "extends": ["plugin:import/recommended", "plugin:react/recommended"],
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "warn",
    "no-debugger": "error",
    "eqeqeq": ["error", "always"],
    "no-var": "error",
    "prefer-const": "error",
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "import/no-unresolved": "error",
    "jsx-a11y/alt-text": "warn"
  },
  "settings": {
    "react": {
      "version": "19"
    }
  },
  "globals": {
    "React": "readonly"
  }
}